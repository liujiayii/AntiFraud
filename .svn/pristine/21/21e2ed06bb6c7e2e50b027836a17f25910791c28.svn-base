.login-main {
	position: absolute;
	width: 100%;
	height: 100%;
	background: url("images/login.jpg") no-repeat center;
}

.login-form {
	position: absolute;
	background: rgba(255, 255, 255, 0.3);
	border-radius: 10px;
	left: 50%;
	top: 30%;
	padding: 50px;
	width: 424px;
	box-sizing: border-box;
}

.login-elip {
	color: #ffffff;
	font-size: 35px;
	text-align: center;
	font-family: "方正兰亭超细黑简体";
	letter-spacing: 5px;
	font-weight: bold;
}

.login-input-inline {
	position: relative;
	display: flex;
	width: 100%;
	margin-top: 30px;
}

.login-input-inline .layui-icon {
	position: absolute;
	left: 6px;
	top: 6px;
    font-size: 24px;
	color: #2F4056;
}

.login-input {
	background: rgba(255, 255, 255, 0.5);
	border-radius: 3px;
	border: 1px solid #ffffff;
	padding-left: 40px;
}

.login-button {
	width: 100%;
	height: 40px;
	font-size: 20px;
	border: none;
	border-radius: 4px;
	cursor: pointer;
	margin: 20px 0;
}