html, body {
	min-width: 500px;
}

.layui-layout-right .layui-nav-bar {
	opacity: 0 !important;
}

.layui-nav-itemed>a {
	border-top: 1px solid #72808D;
	border-bottom: 1px solid #192431;
}
.layui-input, .layui-textarea {
    padding-right: 10px;
}

.layui-disabled, .layui-disabled:hover {
	color: #757575 !important;
}

.layui-form select {
	display: block;
	width: 0px;
	height: 0px;
	overflow: hidden;
	border: 0px;
}
.layui-layer-photos {
    -webkit-animation-duration: .4s!important;
    animation-duration: .4s!important;
}

/* 火狐浏览器下拉框 */
.layui-form-selectup dl {
	bottom: -124px;
}

.user {
	padding-left: 10px;
}

.layui-bg-theme {
	background: #393D49;
}

.userName {
	line-height: 120px;
	color: #fff;
}

.menu-ioc {
	margin-right: 10px;
}

.circular {
	margin-right: 15px;
	height: 42px;
}

.search-input {
	width: 300px;
	height: 40px;
	border-radius: 20px;
	outline: none;
	border: 1px solid #ccc;
	padding: 0 20px 0 40px;
	font-size: 15px;
}

.layui-icon-search {
	position: absolute;
	left: 16px;
	top: 14px;
}

.layui-table thead tr {
	background-color: #405467;
	color: #fff;
}

.layui-table tr {
	color: #73879c;
}

.margin-top-15 {
	margin-top: 15px;
}

.margin-top-50 {
	margin-top: 50px;
}

.margin-left-150 {
	margin-left: 150px;
}

/* 状态颜色 */
.pass {
	color: #1E9FFF;
}

.unpass {
	color: #ccc;
}

.failed {
	color: red;
}

.required {
	color: red;
	padding: 0 6px;
}

.wait {
	color: purple;
}

/*面包屑*/
.breadcrumb {
	width: 200px;
	height: 21px;
}

.breadcrumb img {
	width: 24px;
	height: 21px;
	float: left;
}

.breadcrumb .word {
	height: 19px;
	margin-top: 2px;
	float: left;
	margin-left: 8px;
}

.breadcrumb .word span {
	float: left;
}

.breadcrumb .primary {
	color: #181818;
	font-size: 14px;
}

.breadcrumb .triangle {
	content: '';
	width: 0;
	height: 0;
	border-style: solid;
	border-color: transparent transparent transparent #999898;
	overflow: hidden;
	border-width: 4px;
	margin: 6px 4px 0 8px;
}

.breadcrumb .secondary {
	color: #757575;
	font-size: 12px;
	margin-top: 1px;
}

/*表单*/
.layui-field-title {
	margin: 20px 0 30px;
	font-weight: bolder;
	color: #181818;
}

.form-main {
	padding: 50px;
	color: #757575;
	min-width: 666px;
}

.form-main-4 .layui-form-item {
	display: inline-block;
	width: 360px;
	height: 40px;
}

.form-main .layui-form-item textarea {
	width: 400px;
	height: 100px;
	line-height: 32px;
	color: #757575;
	padding: 0 10px;
}

.form-main input[type='text'] {
	color: #757575;
}

.form-main .layui-form-label {
	width: 120px;
}

.confirm-but, .cancel-but {
	width: 145px;
	height: 45px;
	border-radius: 5px;
}

.cancel-but {
	color: #00b7ee;
	border: 1px solid #00b7ee;
}

.btn-item {
	width: 100% !important;
}

.remark-item {
	width: 100% !important;
	height: auto !important;
}

.imgList img {
	width: 100%;
	height: 100%;
}

.imgList .imgBox {
	width: 200px;
	height: 200px;
	float: left;
	margin: 4px;
}

.page-but {
	position: relative;
	width: 464px;
}

.layui-input-inline .unit {
	position: absolute;
	left: 200px;
	top: 10px;
	width: 40px;
}

input[name="apply_for_limit"], input[name="approval_limit"] {
	background: url(/riskManagement/images/money.png) no-repeat 14px 13px;
	padding-left: 30px;
}

.uploadContract .layui-form-select .layui-input {
	border-radius: 40px;
	height: 40px;
	border: 1px solid #ccc;
	padding: 19px;
}

.uploadContract .layui-anim {
	margin-top: 4px;
}

.uploadContract .layui-form-select, .uploadContract {
	width: 300px;
	height: 40px;
}
/* accessMangement */
.access-control .access-form {
	height: 30px;
}

.access-control .layui-form-checked[lay-skin=primary] i {
	border-color: #30a2fb;
	background-color: #30a2fb;
}

.access-control .layui-form-checkbox[lay-skin=primary]:hover i {
	border-color: #30a2fb;
}

/* printing-contract */
.printing-contract .print-box {
	padding: 20px;
	border: 1px solid #ccc;
	width: 736px;
	margin: 100px auto 0;
}

.printing-contract .page-but {
	margin: 50px auto;
}

/* index */
.layui-col-sm3 span {
	font-size: 30px;
	color: #1e699e;
}

.layui-col-sm3 {
	text-align: center;
	border-left: 1px dotted #d8d8d8;
	border-right: 1px dotted #d8d8d8;
	line-height: 34px;
	padding: 25px 0 27px;
	color: #666;
	background: #f1f1f1;
}

/*U盾管理*/
.addBtns{
	float: right;
    width: 50px;
    height: 35px;
    line-height: 35px;
    border-radius: 5px;
    background: #009688;
    border: none;
}