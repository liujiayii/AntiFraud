
body{
    background: #6491f4;
    padding: 9rem .4rem 2rem;
}
form{
    position: relative;
    background: #fff;
}
.fomr-bg{
    position: absolute;
    bottom: 51.2rem;
}
.fomr-bg img{
    width: 100%;
}
.form-main{
    overflow: hidden;
}
.title {
	font-family: 'HYLiLiangHeiJ';
	font-size: .96rem;
	color: #272727;
	text-align: center;
	margin-bottom: 1.5rem;
    margin-top: 1rem;
}

.title-span {
	color: #4c72fd;
}
.form-input {
	height: 2.7rem;
	width: 18rem;
    margin: 0 auto;
}

.form-input .form-input-info {
	font-size: .72rem;
	color: #333;
	line-height: 1.7rem;
	float: left;

}

.form-input input {
	width: 10rem;
	height: 1.7rem;
	border: .06rem solid #2853f3;
	font-size: .72rem;
	color: #0C0C0C;
	line-height: 1.7rem;
	padding: 0 0.4rem;
	float: right;
}

.form-border{
    position: absolute;
    width: .6rem;
    height: 3.2rem;
}
.form-border img{
    width: 100%;
    height: 100%;
}

.form-border-1{
    top: -2.25rem;
    left: 2.8rem;
}
.form-border-2{
    top: -2.25rem;
    right: 2.8rem;
}
.form-border-3{
    bottom: -2.25rem;
    right: 2.8rem;
}
.form-border-4{
    bottom: -2.25rem;
    left: 2.8rem;
}
.form-main-border{
    position: relative;
    border-top: 1.3rem solid #6491f4;
    border-bottom: 1.3rem solid #6491f4;
} 